Algoritmo EJE8
	num <- 1
	pos <- 0
	neg <- 0
	Repetir
		Escribir ' dime un nu numero'
		Leer n
		Si n>0 Entonces
			pos <- pos+1
		SiNo
			Si num<0 Entonces
				neg <- neg+1
			SiNo
				Escribir ' se ha detectado un cero'
			FinSi
		FinSi
	Hasta Que n=0
	Escribir ' has obtenido ', neg, ' numero/s negativo/s '
	Escribir ' has obtenido ', pos, ' numero/s positivo/s '
FinAlgoritmo
